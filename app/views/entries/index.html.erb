<% Entry::CATEGORIES.each {|kind| %>
<h1><%=kind.humanize%> &mdash; <%=Entry.totals(kind)%></h1>
<% if @entries[kind].size > 0 then %>
<table>
<tbody>
	<tr>
		<th>Board username</th>
		<th>Class</th>
		<th>Category</th>
		<th>ET</th>
		<th>Points</th>
	</tr>
	<%= render :partial => 'entries/entry', :collection => @entries[kind] %>
</tbody>
</table>
<% else %>
<div class="empty-results">Oh snizzap! No times have been recorded for <%=kind.humanize%> yet.</div>
<% end %>
<% } %>